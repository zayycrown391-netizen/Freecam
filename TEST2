    --dash-muted:rgba(255,255,255,.35);
    --shadow:rgba(0,0,0,.70);
    --bottom:8.5%;                  /* lower it here */
    --rail:88px;                    /* dash length default */
    --rail-active:102px;            /* dash length when active */
    --font:20px;                    /* base size */
  }

  html,body{
    margin:0;height:100%;background:transparent;overflow:hidden;
