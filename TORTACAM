  <div class="wrap">
    <div class="list animate-in" id="list">
      <div class="glider" id="glider"></div>

      <div class="item active">- Look-Around -</div>
      <div class="item">Teleport</div>
      <div class="item">Action <span>( M82v2 )</span></div>
      <div class="item">Car Shooter <span>( Cargoplane )</span></div>
      <div class="item">Spawn Angry Ped</div>
      <div class="item">Delete Entity</div>
      <div class="item">Flip Vehicle</div>
      <div class="item">Unlock Vehicle</div>
    </div>
    <div class="hint">Scroll â€¢ Select</div>
  </div>

<script>
  const items = [...document.querySelectorAll('.item')];
  const glider = document.getElementById('glider');
  const list   = document.getElementById('list');
  let idx = 0;

  function setGliderTo(i, instant=false){
    const rItem = items[i].getBoundingClientRect();
    const rList = list.getBoundingClientRect();
    const top = (rItem.top - rList.top) + rItem.height + 4; // a bit below text
    if(instant){ glider.style.transition = 'none'; }
    glider.style.top = top + 'px';
    glider.style.width = (Math.min(420, Math.max(220, rItem.width * 0.68))) + 'px';
    if(instant){ requestAnimationFrame(()=> glider.style.transition = 'top .22s cubic-bezier(.2,.8,.2,1), width .22s ease'); }
  }

  function setActive(newIdx){
    items[idx].classList.remove('active');
    idx = (newIdx + items.length) % items.length;
    items[idx].classList.add('active');
    setGliderTo(idx);
  }

  // init
  window.addEventListener('load', ()=>{
    setGliderTo(idx, true);
  });

  // wheel navigation (smooth)
  list.addEventListener('wheel', (e)=>{
    e.preventDefault();
    (e.deltaY > 0) ? setActive(idx + 1) : setActive(idx - 1);
  }, {passive:false});

  // optional arrow keys if DUI focuses input
  window.addEventListener('keydown', (e)=>{
    if (e.key === 'ArrowDown') setActive(idx + 1);
    else if (e.key === 'ArrowUp') setActive(idx - 1);
  });

  // hover moves glider too (nice polish)
  items.forEach((el, i)=>{
    el.addEventListener('mouseenter', ()=> setGliderTo(i));
    el.addEventListener('mousemove',  ()=> setGliderTo(i));
  });
</script>
</body>
</html>
