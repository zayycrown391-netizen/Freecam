<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@700;800&display=swap');

  :root{
    --fg:#ffffff;
    --muted:rgba(255,255,255,.70);
    --dash:#0f5e2b;               /* dark green dashes */
    --shadow:rgba(0,0,0,.65);     /* drop shadow */
  }

  html,body{
    margin:0;height:100%;background:transparent;overflow:hidden;
    user-select:none;color:var(--fg);
    font-family:'Inter',system-ui,Segoe UI,Roboto,Arial;
    font-weight:800; /* a bit bolder */
  }

  /* lower on screen, centered; no background panel */
  .wrap{
    position:fixed;left:50%;bottom:14%;
    transform:translateX(-50%);
    pointer-events:auto;
  }

  .title{display:none;} /* no "Freecam" label */

  .list{ position:relative; }

  .item{
    font-size:20px;          /* slightly smaller */
    line-height:30px;
    text-align:center;
    letter-spacing:.25px;
    margin:6px 0;
    opacity:.95;
    /* subtle black stroke + soft drop shadow */
    text-shadow:
      0 0 2px #000,
      0 1px 0 #000,
      1px 0 0 #000,
      -1px 0 0 #000,
      0 0 14px var(--shadow);
    transition: transform .16s ease, opacity .16s ease;
  }
  .item span{opacity:.9;}
  .item.active{ transform:scale(1.04); opacity:1; }

  /* Gliding dashed underline (no grey box) */
  .glider{
    position:absolute; left:50%;
    width:62%; height:0; border-top:2px dashed var(--dash);
    transform:translateX(-50%);
    filter: drop-shadow(0 2px 4px rgba(0,0,0,.35));
    transition: top .22s cubic-bezier(.2,.8,.2,1), width .22s ease;
    pointer-events:none;
  }

  /* subtle enter animation */
  .list.animate-in{ opacity:0; transform:translateY(8px); animation:in .35s ease forwards; }
  @keyframes in{ to{opacity:1; transform:none;} }

  .hint{
    margin-top:10px;text-align:center;font-size:12px;color:var(--muted);
    text-shadow:0 0 10px rgba(0,0,0,.6);
    letter-spacing:1px;
  }
</style>
