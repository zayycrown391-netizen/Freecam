    <div class="tooltip" id="tooltip">
        This is a sample notification for a feature.
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const tooltip = document.getElementById('tooltip');
            
            // --- Tooltip Logic ---
            const hoverItems = document.querySelectorAll('.menu-item, .menu-item-nav, .menu-item-button, .menu-item-toggle');
            
            hoverItems.forEach(item => {
                item.addEventListener('mouseenter', () => {
                    let text = item.firstChild.textContent.trim();
                    if (text === "Godmode" || text === "Noclip") {
                         text = item.querySelector('span').textContent.trim();
                    }
                    tooltip.textContent = `This will attempt to... ${text.toLowerCase()}`;
                    tooltip.style.display = 'block';
                });
                
                item.addEventListener('mouseleave', () => {
                    tooltip.style.display = 'none';
                });
            });

            // --- Tab Navigation Logic (for Player menu) ---
            const tabs = document.querySelectorAll('.tab-item');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');

                    const targetId = tab.getAttribute('data-target');
                    
                    contents.forEach(content => {
                        content.style.display = 'none';
                    });

                    const targetContent = document.getElementById(targetId);
                    if (targetContent) {
                        targetContent.style.display = 'block';
                    }
                });
            });

            // --- Page Navigation Logic (Main Menu -> Player) ---
            const navItems = document.querySelectorAll('.menu-item-nav');
            const pages = document.querySelectorAll('.menu-body');
            const mainMenu = document.querySelector('.menu-body[data-page="main"]');

            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    const targetPageId = item.getAttribute('data-target');
                    
                    // Hide main menu
                    mainMenu.style.display = 'none';

                    // Show target page
                    const targetPage = document.querySelector(`.menu-body[data-page="${targetPageId}"]`);
                    if (targetPage) {
                        targetPage.style.display = 'block';
                    }
                });
            });
            
            // Note: A "back" button would be needed to return to the main menu.
            // This simple example does not include one.

        });
    </script>
</body>
