  }

  /* centered column, lowered; no background panel */
  .wrap{
    position:fixed;left:50%;bottom:var(--bottom);
    transform:translateX(-50%);
    pointer-events:auto;
  }

  /* column layout + mask fade at the bottom (no visible color) */
  .list{
    position:relative;
    display:flex; flex-direction:column; align-items:center;
