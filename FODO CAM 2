<body>
  <div class="wrap">
    <div class="menu animate-in" id="menu">
      <div class="title">— Freecam —</div>
      <div class="list" id="list">
        <div class="selector" id="selector"></div>

        <div class="item active">- Look-Around -</div>
        <div class="item">Teleport</div>
        <div class="item">Action <span>( M82v2 )</span></div>
        <div class="item">Car Shooter <span>( Cargoplane )</span></div>
        <div class="item">Spawn Angry Ped</div>
        <div class="item">Delete Entity</div>
        <div class="item">Flip Vehicle</div>
        <div class="item">Unlock Vehicle</div>
      </div>
      <div class="hint">Scroll • Select</div>
    </div>
  </div>

<script>
  // ---------- Smooth “glide” selector ----------
  const items = [...document.querySelectorAll('.item')];
  const selector = document.getElementById('selector');
  const list = document.getElementById('list');
  let idx = 0;

  // LERP to make selector glide
  let targetTop = 0, currentTop = 0;
  function placeSelectorInstant() {
    const r = items[idx].getBoundingClientRect();
    const parentTop = list.getBoundingClientRect().top + window.scrollY;
    currentTop = targetTop = (r.top + window.scrollY - parentTop) + r.height * 0.02;
    selector.style.top = currentTop + 'px';
  }

  function glide() {
    currentTop += (targetTop - currentTop) * 0.18; // easing
    selector.style.top = currentTop.toFixed(2) + 'px';
    requestAnimationFrame(glide);
  }

  function setActive(newIdx){
    items[idx].classList.remove('active');
    idx = (newIdx + items.length) % items.length;
    items[idx].classList.add('active');

    const r = items[idx].getBoundingClientRect();
    const parentTop = list.getBoundingClientRect().top + window.scrollY;
    targetTop = (r.top + window.scrollY - parentTop) + r.height * 0.02;
  }

  // Init
  window.addEventListener('load', () => {
    placeSelectorInstant();
    requestAnimationFrame(glide);
  });

  // ---------- Mouse wheel navigation (smooth) ----------
  // We only listen while pointer is over the panel to avoid stealing scroll globally.
  const menu = document.getElementById('menu');
  menu.addEventListener('wheel', (e)=>{
    e.preventDefault();
    if (e.deltaY > 0) setActive(idx + 1);
    else setActive(idx - 1);
  }, { passive:false });

  // Optional: arrow keys (useful if DUI focuses the page)
  window.addEventListener('keydown', (e)=>{
    if (e.key === 'ArrowDown') setActive(idx + 1);
    else if (e.key === 'ArrowUp') setActive(idx - 1);
  });
</script>
</body>
</html>
